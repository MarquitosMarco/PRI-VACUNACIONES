<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             x:Class="BarcodeQrScanner.PicturePage"
             Title="PicturePage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <LinearGradientBrush x:Key="BackgroundGradientBrush">
                <GradientStop Color="#3366FF" Offset="0.0" />
                <GradientStop Color="#99CCFF" Offset="1.0" />
            </LinearGradientBrush>
        </ResourceDictionary>
    </ContentPage.Resources>


    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <skia:SKCanvasView x:Name="canvasView"
                                   HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"
                                   PaintSurface="OnCanvasViewPaintSurface" />

                <Label FontSize="18"
                       FontAttributes="Bold"
                       x:Name="ResultLabel"
                       Text=" "
                       TextColor="Red"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>

                <!-- Espacio en blanco para separar los botones de la imagen QR -->
                <BoxView HeightRequest="20" />

                <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                    <!-- Cambiar color del bot칩n Ver Datos -->
                    <Button Text="Ver Datos" Clicked="VerDatosButton_Clicked" BackgroundColor="#4CAF50" TextColor="White" />

                    <!-- Cambiar color del bot칩n Volver Atr치s -->
                    <Button Text="Volver Atr치s" Clicked="Volver_Clicked" BackgroundColor="#E57373" TextColor="Blue" />
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>

