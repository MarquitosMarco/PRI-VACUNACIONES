<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Vacunacion</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Vacunacion.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-black">
            <div class="container d-flex justify-content-between">
                <a class="navbar-brand" href="/Home/Index">
                    <img src="https://i.pinimg.com/originals/0d/cf/b5/0dcfb548989afdf22afff75e2a46a508.jpg" alt="Tu Logo" width="60" height="60" class="rounded-circle">
                </a>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Index">
                            <span style="font-size: 28px; color: #007BFF;">Sedes</span>
                            <span style="font-size: 28px; color: #007BFF;">Cochabamba</span>
                        </a>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Login/LoginIndex">
                            <i class="fas fa-user"></i>
                            <span>Iniciar Sesión</span>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

   

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody() <!-- Renderiza el contenido de las páginas que utilizan este diseño -->
        </main>
    </div>

  

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Vacunacion - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
  
</body>
</html>
