
@{
    ViewData["Title"] = "MenuSuperAdmin";
}

<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />

<style>
    .hidden-buttons {
        display: none;
    }
</style>


<body>
    <section style="margin-top:15%">
        <div class="form-box">
            <div class="form-value">
                <form asp-controller="Login" asp-action="LoginIndex" method="post">
                    
                 

                    <button type="submit" asp-area="" asp-controller="Peoples" asp-action="Index">Crear Persona</button>

