<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Login1.Login.CambioContraseña"
             Title="CambioContraseña">
    <StackLayout Padding="30">
        <Entry x:Name="NewPasswordEntry" Placeholder="Nueva Contraseña" IsPassword="True" />
        <Entry x:Name="ConfirmPasswordEntry" Placeholder="Confirmar Contraseña" IsPassword="True" />
        <Entry x:Name="VerificationCodeEntry" Placeholder="Código de Verificación" />
        <Button Text="Confirmar" Clicked="OnConfirmButtonClicked" />
        <Label x:Name="ErrorLabel" TextColor="Red" />
    </StackLayout>
</ContentPage>