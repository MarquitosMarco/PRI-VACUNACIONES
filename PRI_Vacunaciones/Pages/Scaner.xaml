<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             x:Class="PRI_Vacunaciones.M
             ainPage"
             Title="ESCANEAR QR">
    

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <Label x:Name="barcodeResult" FontSize="20"/><!--En este label obtenemos los datos del qr-->

            <cv:CameraView x:Name="cameraView" WidthRequest="300" HeightRequest="200"
                          
                           BarcodeDetected="cameraView_BarcodeDetected"/>
            <Button Text="Activar camara" Clicked="OnCameraButtonClicked"/>

            <SearchBar x:Name="searchBar" Placeholder="Buscar" SearchButtonPressed="OnSearchButtonPressed" />
            <Button Text="Buscar" Clicked="OnSearchButtonClicked" />


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
