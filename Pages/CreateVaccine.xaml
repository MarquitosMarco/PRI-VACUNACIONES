<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BarcodeQrScanner.Pages.CreateVaccine"
             Title="CreateVaccine">
    <VerticalStackLayout>
        <Label Text="Nombre de la Mascota" />
        <Entry Placeholder="Nombre de la mascota" x:Name="NamePet" />

        <Label Text="Descripción" />
        <Entry Placeholder="Descripción" x:Name="Description" />

        <Button Text="Guardar" Clicked="GuardarRegistro_Clicked" />

        <Button Text="Volver Atras" Clicked="Volver_Clicked" />
    </VerticalStackLayout>
</ContentPage>